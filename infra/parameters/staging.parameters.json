{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentParameters.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "environment": {
      "value": "staging"
    },
    "namePrefix": {
      "value": "copiloteval"
    },
    "enableMonitoring": {
      "value": true
    },
    "sqlConfig": {
      "value": {
        "administratorLogin": "copilotadmin",
        "administratorLoginPassword": "",
        "databaseName": "copiloteval-staging",
        "skuName": "S1",
        "maxSizeBytes": 21474836480
      }
    },
    "storageConfig": {
      "value": {
        "skuName": "Standard_LRS",
        "containers": [
          "job-data",
          "results",
          "uploads",
          "large-payloads"
        ]
      }
    },
    "serviceBusConfig": {
      "value": {
        "skuName": "Standard",
        "queues": [
          {
            "name": "job-messages",
            "maxDeliveryCount": 10,
            "lockDurationInSeconds": 300,
            "duplicateDetectionTimeWindow": "PT10M",
            "deadLetteringOnMessageExpiration": true,
            "enableBatchedOperations": true,
            "enablePartitioning": false,
            "maxSizeInMegabytes": 2048
          },
          {
            "name": "job-results",
            "maxDeliveryCount": 5,
            "lockDurationInSeconds": 60,
            "duplicateDetectionTimeWindow": "PT5M",
            "deadLetteringOnMessageExpiration": true,
            "enableBatchedOperations": true,
            "enablePartitioning": false,
            "maxSizeInMegabytes": 1024
          }
        ]
      }
    },
    "functionAppConfig": {
      "value": {
        "skuName": "EP1",
        "skuTier": "ElasticPremium",
        "runtime": "dotnet",
        "runtimeVersion": "8"
      }
    },
    "tags": {
      "value": {
        "Environment": "staging",
        "Application": "CopilotEval",
        "Owner": "DevOps",
        "Purpose": "Pre-production testing and validation"
      }
    }
  }
}